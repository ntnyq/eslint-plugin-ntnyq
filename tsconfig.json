{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "resolveJsonModule": true,
    "erasableSyntaxOnly": true,
    "libReplacement": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./scripts/**/*.ts",
    "./tests/**/*.ts",
    "./docs/**/*.d.ts",
    "./docs/.vitepress/**/*.ts",
    "./docs/.vitepress/**/*.vue",
    "./*.config.ts"
  ],
  "exclude": ["**/node_modules", "**/dist"]
}
