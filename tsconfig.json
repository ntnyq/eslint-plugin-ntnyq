{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "outDir": "dist",
    "declaration": true,
    "target": "ES2021",
    "lib": ["DOM", "ES2021"],
    "types": ["node"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts", "./scripts/**/*.ts", "./tests/**/*.ts"],
  "exclude": ["**/node_modules", "**/dist"]
}
